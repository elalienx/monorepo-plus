      "@monorepo-plus/consumer-loans": ["products/consumer-loans/src/index.ts"],
      "@monorepo-plus/mortgage": ["products/mortgage/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
